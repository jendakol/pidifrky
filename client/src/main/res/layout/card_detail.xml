<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="1">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/image" android:layout_gravity="center_horizontal" android:src="@drawable/empty"
            android:layout_centerHorizontal="true" android:layout_alignParentBottom="false"
            android:layout_alignParentTop="true" android:onClick="showBigImage" android:clickable="true"/>
    <ImageView android:layout_width="match_parent" android:layout_height="150dp" android:id="@+id/image_mask"
               android:layout_gravity="center_horizontal" android:src="@drawable/detail_mask"
               android:layout_centerHorizontal="true" android:layout_alignParentBottom="false"
               android:layout_alignParentTop="true" android:layout_marginTop="100dp" android:onClick="showBigImage"
               android:clickable="true"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text which is longer than a single line"
            android:id="@+id/name" android:layout_alignBottom="@+id/image" android:layout_centerHorizontal="true"
            android:textSize="28sp" android:textStyle="bold" android:singleLine="false"
            android:gravity="center_vertical|center_horizontal" tools:ignore="HardcodedText" android:minLines="2"
            android:layout_marginRight="15dp" android:layout_marginLeft="15dp"
            android:textColor="@color/textColorPrimary" android:onClick="showBigImage" android:clickable="true"
            android:layout_marginBottom="-5dp"/>
    <TextView tools:ignore="HardcodedText" android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="č. 291" android:id="@+id/number"
              android:textSize="28sp"
              android:textStyle="bold" android:singleLine="false" android:gravity="center_vertical|center_horizontal"
              android:layout_below="@+id/name" android:layout_alignParentLeft="false"
              android:layout_alignParentStart="true" android:layout_centerHorizontal="true"
              android:textColor="@color/textColorPrimary" android:layout_marginTop="5dp"/>
    <ImageView android:layout_width="40dp" android:layout_height="40dp" android:id="@+id/status"
               android:src="@drawable/smiley"
               android:layout_alignParentRight="true"
               android:layout_alignParentEnd="true" android:layout_alignRight="@+id/number"
               android:layout_alignBottom="@+id/number" android:layout_marginRight="15dp"/>

    <com.malinskiy.superrecyclerview.SuperRecyclerView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:mainLayoutId="@layout/layout_recyclerview_verticalscroll"
            app:recyclerClipToPadding="false"
            app:recyclerPadding="5dp"
            app:scrollbarStyle="outsideInset"
            android:layout_alignParentBottom="true" android:layout_below="@+id/number" android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
</RelativeLayout>