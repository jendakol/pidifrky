<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip"
    xmlns:android="http://schemas.android.com/apk/res/android" android:clickable="true"
    android:background="@drawable/border_bottom">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:typeface="sans"
        android:textSize="18sp"
        android:text="name"
        android:textStyle="bold" android:singleLine="true"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="false"
        android:layout_marginRight="5dip"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:text="address"
        android:layout_below="@+id/name" android:layout_alignParentLeft="true" android:singleLine="true"/>

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="false"
        android:layout_marginRight="5dip"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:text="gps"
        android:layout_below="@+id/address" android:layout_alignParentLeft="true"/>
</RelativeLayout>